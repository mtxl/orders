<div class="descritpion">
  <%= form_for @contract, {
                   :as => :contract, 
                   :url => {:controller => 'order_contracts', :action => 'create', :issue_id => @issue, :format => :pdf},
                   :method => :post,
                   :html => {:id => 'new-contract-form'}
                 } do |f| %>
                 <%= f.select :institute_id, template_contract_options_for_select(@issue.custom_field_value(8)) %>
                 <%= submit_tag l(:button_create) %>
                 <%= preview_link({:controller => 'order_contracts', :action => 'preview', :issue_id => @issue}, "new-contract-form")%>

<div id="preview" class="wiki"></div>
  <% end %>
</div>  
